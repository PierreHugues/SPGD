@model SPGD.Models.RendezVou

@{
    ViewBag.Title = "Reporter un Rendez-Vous";
}

<h2>Contrôle de reportation de Rendez-Vous</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Entrez les informations demandées</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                <h4>Modification du Rendez-Vous</h4>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.DateHeureRendezVous, new { htmlAttributes = new { @class = "form-control", @style = "display:inline" } }) 
                <text style="color:red">*</text> 
                @Html.ValidationMessageFor(model => model.DateHeureRendezVous, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.RendezVouID)

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Sauvegarder" class="btn btn-lg" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour aux séances", "Index", "Seances")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
