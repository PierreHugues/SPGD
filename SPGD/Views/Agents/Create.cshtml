@model SPGD.Models.Agent

@{
    ViewBag.Title = "Create";
}

<h2>S'inscrire en tant que nouvel agent</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Agent</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                Nom de l'agent:
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control", @style = "display:inline" } })
                <text style="color:red">*</text> 
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Prenom de l'agent:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control", @style = "display:inline" } })
                    <text style="color:red">*</text> 
                    @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Premier numéro de téléphone:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Telephone1, new { htmlAttributes = new { @class = "form-control", @style = "display:inline" } })
                    <text style="color:red">*</text> 
                    @Html.ValidationMessageFor(model => model.Telephone1, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Deuxième numéro de téléphone:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Telephone2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telephone2, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Premier courriel:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Courriel1, new { htmlAttributes = new { @class = "form-control", @style = "display:inline" } })
                    <text style="color:red">*</text> 
                    @Html.ValidationMessageFor(model => model.Courriel1, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Deuxième courriel:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Courriel2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Courriel2, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                Adresse du bureau:
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdresseBureau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AdresseBureau, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="S'inscrire" class="btn btn-lg" />
            </div>
        </div>
    </div>
}
        
<div>
    @Html.ActionLink("Retour aux séances", "Index", "Seances")
</div>
