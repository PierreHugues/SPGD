@model SPGD.Models.Photo

@{
    ViewBag.Title = "Create";
}

<h2>Ajout de photos</h2>

@using (Html.BeginForm("Create", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Seulement les fichiers png, jpg et jpeg sont acceptés</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="file" style="display:inline-block" name="imageFile" multiple/> 
        <text style="color:red">*</text> 

        @Html.HiddenFor(model => model.SeanceID, new { Value = ViewBag.SeanceID })
        <span></span>
        <span></span>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-lg" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retours aux photos", "Index")
</div>
